# Configuration du serveur
PORT=8080
NODE_ENV=development

# Configuration CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Secrets de sécurité
SESSION_SECRET=votre_session_secret_ultra_long_et_securise_32_caracteres_minimum
JWT_SECRET=votre_jwt_secret_ultra_long_et_securise_32_caracteres_minimum

# Configuration des tokens
RUN_TOKEN_TTL_SECONDS=3600

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27018/cynker-api

# Configuration N8N (optionnel)
N8N_WEBHOOK_URL=https://votre-n8n-instance.com/webhook/cynker
N8N_API_KEY=votre_api_key_n8n
N8N_WORKFLOW_ID=workflow_id_cynker

# Clés de chiffrement
ENCRYPTION_KEY_CURRENT=votre_cle_chiffrement_actuelle_32_caracteres_minimum
ENCRYPTION_KEY_PREVIOUS=votre_cle_chiffrement_precedente_32_caracteres_minimum

# Configuration MongoDB Docker
MONGO_PORT=27018
MONGO_USERNAME=admin
MONGO_PASSWORD=password123
MONGO_DATABASE=cynker-api
MONGO_AUTH_SOURCE=admin
